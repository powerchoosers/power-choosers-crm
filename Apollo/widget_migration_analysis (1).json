{
  "lusha_current": {
    "entry_points": [
      "window.Widgets.openLusha(contactId) - from Contact Detail page",
      "window.Widgets.openLushaForAccount(accountId) - from Account Detail page"
    ],
    "widget_flow": [
      "1. User clicks Lusha button in header (Contact or Account detail)",
      "2. makeCard() function creates widget panel",
      "3. Extract account name from current context (ContactDetail.state or AccountDetail.state)",
      "4. Call Lusha API to search company (via enrich.js backend endpoint)",
      "5. Display company summary (logo, website, summary, employees, revenue, linkedin)",
      "6. Display people list (pagination: 5 per page)",
      "7. People cards show: name, title, email(?), phone(?), with reveal buttons"
    ],
    "company_display": [
      "Logo (from company data)",
      "Company name",
      "Website",
      "Summary",
      "LinkedIn URL",
      "Employees (size)",
      "Revenue",
      "Industry"
    ],
    "people_display": [
      "First Name + Last Name",
      "Title",
      "Email (if revealed)",
      "Phone (if revealed)",
      "LinkedIn (if available)",
      "Pagination controls"
    ]
  },
  "apollo_equivalent": {
    "entry_points": [
      "window.Widgets.openApollo(contactId) - from Contact Detail page",
      "window.Widgets.openApolloForAccount(accountId) - from Account Detail page"
    ],
    "widget_flow": [
      "1. User clicks Apollo button in header (Contact or Account detail)",
      "2. makeCard() function creates widget panel",
      "3. Extract account/company name from current context",
      "4. Call Apollo API to search company (/mixed_companies/search)",
      "5. Display company summary (logo, website, summary, employees, revenue, linkedin)",
      "6. Call Apollo API to search people (/mixed_people/search)",
      "7. Display people list (pagination: 5 per page)",
      "8. People cards show: name, title, email(?), phone(?), linkedin"
    ]
  },
